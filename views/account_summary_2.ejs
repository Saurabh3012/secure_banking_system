<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
<h1><%= title %></h1>

<form action="/account_summmary_2" method="post">
    <input type="text" placeholder="Username" name="username"  required />
    <input type="password" placeholder="Password" name="password"  required />
    <div class="g-recaptcha" data-sitekey="6LehzHIUAAAAAGgJLF3K8ggErBnuxZUOb3R7CHm8"></div>
    <input type="submit" value="Login" />
</form>

<a href="/logout">Logout</a><br/>
<table>
		<th>From</th>
        <th>To</th>
        <th>Amount</th>
        <th>Status</th>
        <th>Datetime</th>
        <th>Accept</th>
        <th>Reject</th>
        <% if (trans){
        trans.forEach(function (item) {
        	if(item.status==-1) {
        %>
        <tr>
        	<td><%= item.from %></td>
            <td><%= item.to %></td>
            <td><%= item.amount %></td>
            <td><%= item.status %></td>
            <td><%= item.timestamp %></td>

            <form action="/account_summmary_2/accept" method="put">
				<td><input type="submit" value="Accept" /></td>
    	    </form>
    	    <form action="/account_summmary_2/reject" method="put">
    	    	<td><input type="submit" value="Reject" ></td>
    	    </form>	
        </tr>
        <% }}) }%>
    </table>

<a href="/make_transaction"></a><br/>
<a href="/get_trans_list">Get Transactions in range</a>

</body>
</html>