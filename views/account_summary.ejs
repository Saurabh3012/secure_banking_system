<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body bgcolor="#E6E6FA">
<h1><%= title %></h1>


<a href="/logout">Logout</a><br/>

<table>
    <th>To</th>
    <th>Amount</th>
    <th>Status</th>
    <th>Datetime</th>

    <% if (trans){
    trans.forEach(function (item) {
    %>
        <tr>
            <td><%= item.to %></td>
            <td><%= item.amount %></td>
            <td><%= item.status %></td>
            <td><%= item.timestamp %></td>
            <form  action="/banking/accept_transaction" method="post">
                <td><input type="hidden" value=<%=item._id%> name="transactionID" /></td>
                <td><input type="submit" value="Accept" /></td>
            </form>

            <form  action="/banking/reject_transaction" method="post">
                <td><input type="hidden" value=<%=item._id%> name="transactionID" /></td>
                <td><input type="submit" value="Reject" ></td>
            </form>
        </tr>
    <% }) }%>
</table> <br> <br> <br>

<a href="/make_transaction">Make a transaction</a> <br> <br>
<a href="/get_trans_list">Get Transactions in range</a>



</body>
</html>
