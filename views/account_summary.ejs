<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body oncontextmenu="return false">
<h1><%= title %></h1>
<script>
 document.onkeydown = function(e) {
    if (e.ctrlKey && (e.keyCode === 67 || e.keyCode === 86 || e.keyCode === 85 ||     e.keyCode === 117 || e.keycode === 17 || e.keycode === 85)) {
        alert('not allowed');
    }
    return false;
};
</script>

<a href="/logout">Logout</a><br/>

<h2>Your balance is <%= bal %></h2>

<table>
    <th>To</th>
    <th>Amount</th>
    <th>Status</th>
    <th>Datetime</th>

    <% if (trans){
    trans.forEach(function (item) {
    %>
        <tr>
            <td><%= item.to %></td>
            <td><%= item.amount %></td>
            <td><%= item.status %></td>
            <td><%= item.timestamp %></td>
        </tr>
    <% }) } %>
</table>
<br>
<a href="/make_transaction">Make a transaction</a><br/>
<a href="/get_trans_list">Get Transactions in range</a><br/>
<a href="/user_details">View Profile</a>

</body>
</html>
