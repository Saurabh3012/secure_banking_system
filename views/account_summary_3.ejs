    <th>To</th>
    <th>Amount</th>
    <th>Status</th>
    <th>Datetime</th>
    <th>Accept</th>
    <th>Reject</th>

    <% if (allTransaction){
    allTransaction.forEach(function (item) {
    if (item.status==-1) {
    %>
        <tr>
            <td><%= item.from %></td>
            <td><%= item.to %></td>
            <td><%= item.amount %></td>
            <td><%= item.status %></td>
            <td><%= item.timestamp %></td>

            <td><input type="submit" value="Accept" /></td>
